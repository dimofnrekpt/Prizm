{
  "name": "icons",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/icons/base/src",
  "prefix": "prizm",
  "targets": {
    "generateIcons": {
      "executor": "@angular-extensions/svg-icons-builder:svg-icons-files-builder",
      "options": {
        "conversionType": "files",
        "optimizeForLazyLoading": true,
        "srcFiles": ["libs/icons/base/assets/icons/**/*.svg"],
        "outputDirectory": "libs/icons/base/src/styles/icons",
        "interfaceName": "PrizmIcons",
        "typeName": "PrizmIconsType",
        "generateEnum": true,
        "completeIconSetName": "PRIZM_ICONS_SET",
        "exportCompleteIconSet": true,
        "enumName": "PrizmIconsEnum",
        "generateType": true,
        "generateTypeObject": true,
        "iconsFolderName": "icons",
        "barrelFileName": "index",
        "prefix": "prizmIcons",
        "modelFileName": "prizm-icons.model",
        "svgoConfig": {
          "plugins": ["removeDimensions"]
        },
        "compileSources": false
      }
    },
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/icons/base"],
      "options": {
        "project": "libs/icons/base/ng-package.json",
        "updateBuildableProjectDepsInPackageJson": false
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/icons/base/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/icons/base/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/icons/base"],
      "options": {
        "jestConfig": "libs/icons/base/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/icons/base/src/**/*.ts",
          "libs/icons/base/src/**/*.html",
          "libs/icons/base/icons/**/*.ts",
          "libs/icons/base/icons/**/*.html",
          "libs/icons/base/set/**/*.ts",
          "libs/icons/base/set/**/*.html",
          "libs/icons/base/lazy/**/*.ts",
          "libs/icons/base/lazy/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
