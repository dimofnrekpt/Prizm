{
  "name": "icons",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/icons/base/src",
  "prefix": "prizm",
  "targets": {
    "generate-icons-24": {
      "executor": "@angular-extensions/svg-icons-builder:svg-icons-files-builder",
      "options": {
        "conversionType": "files",
        "srcFiles": ["libs/icons/base/assets/24/*.svg"],
        "outputDirectory": "libs/icons/base/src/lib/icons/24",
        "interfaceName": "PrizmIcons",
        "typeName": "PrizmIconsType",
        "generateEnum": true,
        "exportCompleteIconSet": true,
        "generateCompleteIconSet": true,
        "completeIconSetName": "PRIZM_ICONS_SET",
        "enumName": "PrizmIconsEnum",
        "fileName": "icons",
        "iconsFolderName": "source",
        "barrelFileName": "index",
        "generateType": true,
        "generateTypeObject": true,
        "prefix": "prizmIcons",
        "optimizeForLazyLoading": true,
        "modelFileName": "prizm-icons.model",
        "svgoConfig": {
          "plugins": [
            "removeDimensions",
            {
              "name": "prefixIds",
              "params": {
                "currentColor": "true"
              }
            }
          ]
        },
        "compileSources": false
      },
      "dependsOn": []
    },
    "generate-icons-16": {
      "executor": "@angular-extensions/svg-icons-builder:svg-icons-files-builder",
      "options": {
        "conversionType": "files",
        "srcFiles": ["libs/icons/base/assets/16/*.svg"],
        "outputDirectory": "libs/icons/base/src/lib/icons/16",
        "interfaceName": "PrizmIcons",
        "typeName": "PrizmIconsType",
        "generateEnum": true,
        "exportCompleteIconSet": true,
        "generateCompleteIconSet": true,
        "completeIconSetName": "PRIZM_ICONS_SET",
        "enumName": "PrizmIconsEnum",
        "fileName": "icons",
        "iconsFolderName": "source",
        "barrelFileName": "index",
        "generateType": true,
        "generateTypeObject": true,
        "prefix": "prizmIcons",
        "optimizeForLazyLoading": true,
        "modelFileName": "prizm-icons.model",
        "svgoConfig": {
          "plugins": [
            "removeDimensions",
            {
              "name": "prefixIds",
              "params": {
                "currentColor": "true"
              }
            }
          ]
        },
        "compileSources": false
      },
      "dependsOn": []
    },
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/icons/base"],
      "options": {
        "project": "libs/icons/base/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/icons/base/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/icons/base/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/icons/base"],
      "options": {
        "jestConfig": "libs/icons/base/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/icons/base/src/**/*.ts", "libs/icons/base/src/**/*.html"]
      }
    },
    "svg-to-font": {
      "executor": "local:svg-to-font",
      "options": {
        "src": "libs/icons/base/assets/24",
        "dist": "libs/icons/base/src/styles/icons-base",
        "fontName": "prizmIconsBase",
        "css": true
      },
      "dependsOn": []
    },
    "svg-16-to-font": {
      "executor": "local:svg-to-font",
      "options": {
        "src": "libs/icons/base/assets/16",
        "dist": "libs/icons/base/src/styles/icons-full",
        "fontName": "prizmIconsFull",
        "css": true
      },
      "dependsOn": []
    },
    "icons-to-lazy": {
      "executor": "local:icons-to-lazy",
      "options": {
        "pathToFolder": "libs/icons/base/src/lib/icons/24/source",
        "pathToOutputFile": "libs/icons/base/src/lib/icons/lazy-icon-set.ts",
        "prefix": "prizmIcons-",
        "exportName": "PRIZM_ICONS_LAZY_SET"
      },
      "dependsOn": ["generate-icons-24"]
    },
    "icons-16-to-lazy": {
      "executor": "local:icons-to-lazy",
      "options": {
        "pathToFolder": "libs/icons/base/src/lib/icons/16/source",
        "pathToOutputFile": "libs/icons/base/src/lib/icons/lazy-icon-set-16.ts",
        "prefix": "prizmIcons-",
        "exportName": "PRIZM_ICONS_FULL_LAZY_SET"
      },
      "dependsOn": ["generate-icons-16"]
    }
  },
  "tags": []
}
